{
  "name": "@saas/api",
  "version": "0.0.0",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "5.18.0",
    "@saas/auth": "workspace:*",
    "@saas/env": "workspace:*",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@saas/eslint-config": "workspace:*",
    "@saas/prettier": "workspace:*",
    "@saas/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.4.1",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.18.0",
    "tsup": "^8.3.5",
    "tsx": "^4.17.0"
    
  },
  "prisma": {
    "seed": "pnpm env:load tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "pnpm env:load tsx watch src/server.ts",
    "db:migrateDev": "pnpm env:load prisma migrate dev",
    "db:migrateDep": "pnpm env:load prisma generate && pnpm env:load prisma migrate deploy",
    "db:studio": "pnpm env:load prisma studio",
    "env:load": "dotenv -e ../../.env --",
    "start": "node dist/server.js",
    "build": "docker compose up -d && pnpm db:migrateDep && tsup"
  },
  "eslintConfig": {
    "extends": [
      "@saas/eslint-config/node"
    ]
  },
  "prettier": "@saas/prettier"
}